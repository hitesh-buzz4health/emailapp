<%- model_class = Reference -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:emails) %>:</strong></dt>
  <dd><%= @reference.emails %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phones) %>:</strong></dt>
  <dd><%= @reference.phones %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ReferenceSpecialization) %>:</strong></dt>
  <dd><%= @reference.ReferenceSpecialization %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ReferenceName) %>:</strong></dt>
  <dd><%= @reference.ReferenceName %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ReferenceEmail) %>:</strong></dt>
  <dd><%= @reference.ReferenceEmail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ReferenceId) %>:</strong></dt>
  <dd><%= @reference.ReferenceId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Name) %>:</strong></dt>
  <dd><%= @reference.Name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:IsRefDoctor) %>:</strong></dt>
  <dd><%= @reference.IsRefDoctor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unique_key) %>:</strong></dt>
  <dd><%= @reference.unique_key %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              references_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reference_path(@reference), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reference_path(@reference),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
